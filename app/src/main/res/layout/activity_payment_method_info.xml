<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/PaymentMethodsInfo_OuterConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/PaymentMethodsInfo_BackwardsIconButton"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="?attr/colorSecondary"
        app:icon="@drawable/chevron_backward_24dp"
        app:iconTint="?attr/colorOnSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/PaymentMethodsInfo_MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="?attr/colorSurfaceContainer"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/PaymentMethodsInfo_BackwardsIconButton">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/PaymentMethodsInfo_InnerConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/PaymentMethodsInfo_VisaIcon"
                android:layout_width="128dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/visa_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/PaymentMethodsInfo_VisaFeeTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/visa_fee"
                android:textAlignment="center"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/PaymentMethodsInfo_VisaIcon" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/PaymentMethodsInfo_MaterialDivider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/PaymentMethodsInfo_VisaFeeTextview" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/PaymentMethodsInfo_MastercardIcon"
                android:layout_width="128dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/mastercard_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/PaymentMethodsInfo_MaterialDivider1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/PaymentMethodsInfo_MastercardFeeTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/mastercard_fee"
                android:textAlignment="center"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/PaymentMethodsInfo_MastercardIcon" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/PaymentMethodsInfo_MaterialDivider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/PaymentMethodsInfo_MastercardFeeTextview" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/PaymentMethodsInfo_MercadoPagoIcon"
                android:layout_width="128dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/mp_cmyk_handshake_color_horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/PaymentMethodsInfo_MaterialDivider2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/PaymentMethodsInfo_MercadoPagoFeeTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/mercado_pago_fee"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/PaymentMethodsInfo_MercadoPagoIcon" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/PaymentMethodsInfo_TitleTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/payment_methods_title"
        android:textColor="?attr/colorOnSurface"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/PaymentMethodsInfo_MaterialCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PaymentMethodsInfo_BackwardsIconButton" />

</androidx.constraintlayout.widget.ConstraintLayout>