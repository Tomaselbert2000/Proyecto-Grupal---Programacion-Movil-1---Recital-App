<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/SignUp_NicknamePassword_ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/SignUp_NicknamePassword_BackwardsButton"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/arrow_back_24dp"
        app:iconTint="?attr/colorOnPrimary"
        android:backgroundTint="?attr/colorPrimary"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/SignUp_NicknamePassword_MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="16dp"
        android:elevation="4dp"
        android:paddingHorizontal="16dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUp_NicknamePassword_BackwardsButton">

        <LinearLayout
            android:id="@+id/SignUp_NicknamePassword_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/SignUp_NicknamePassword_Title_Textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/create_user_title"
                android:textSize="28sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/SignUp_NicknamePassword_NewNickname_InputLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="?attr/colorPrimaryContainer"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusTopStart="16dp"
                app:boxStrokeColor="?attr/colorOnPrimaryContainer"
                app:hintTextColor="?attr/colorOnPrimaryContainer">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/SignUp_NicknamePassword_NewNickname_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email_or_nickname_input_textfield"
                    android:inputType="text"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/SignUp_NicknamePassword_PasswordReqs_Textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/roboto"
                android:textSize="16sp"
                android:padding="16dp"
                android:text="@string/password_requirements" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/SignUp_NicknamePassword_Password_InputLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="?attr/colorPrimaryContainer"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusTopStart="16dp"
                app:boxStrokeColor="?attr/colorOnPrimaryContainer"
                app:hintTextColor="?attr/colorOnPrimaryContainer">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/SignUp_NicknamePassword_Password_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:inputType="textPassword"
                    android:hint="@string/password_input_textfield"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/SignUp_NicknamePassword_ConfirmPassword_InputLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="?attr/colorPrimaryContainer"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusTopStart="16dp"
                app:boxStrokeColor="?attr/colorOnPrimaryContainer"
                app:hintTextColor="?attr/colorOnPrimaryContainer">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/SignUp_NicknamePassword_ConfirmPassword_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:inputType="textPassword"
                    android:hint="@string/new_user_confirm_password_input_textfield"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:id="@+id/SignUp_NicknamePassword_CreateAccount_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="?attr/colorPrimary"
        android:text="@string/sign_up_button"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="16sp"
        app:icon="@drawable/person_add_24dp"
        app:iconPadding="8dp"
        app:iconTint="?attr/colorOnPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@+id/SignUp_NicknamePassword_MaterialCardView" />

</androidx.constraintlayout.widget.ConstraintLayout>